<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://dozer.sourceforge.net
          http://dozer.sourceforge.net/schema/beanmapping.xsd">

    <configuration>
        <stop-on-errors>true</stop-on-errors>
        <date-format>MM/dd/yyyy HH:mm</date-format>
        <wildcard>true</wildcard>
    </configuration>

    <mapping>
        <class-a>com.apollo.domain.model.ApolloServer</class-a>
        <class-b>com.apollo.domain.dto.ApolloServerDTO</class-b>
        <field custom-converter="com.apollo.mapper.IPAddressCustomConverter">
            <a>address</a>
            <b>address</b>
        </field>
    </mapping>                    
    <mapping>
        <class-a>com.apollo.domain.model.ApolloNetwork</class-a>
        <class-b>com.apollo.domain.dto.ApolloNetworkDTO</class-b>
        <field custom-converter="com.apollo.mapper.IPAddressCustomConverter">
            <a>start</a>
            <b>start</b>
        </field>
        <field custom-converter="com.apollo.mapper.IPAddressCustomConverter">
            <a>end</a>
            <b>end</b>
        </field>
        <field custom-converter="com.apollo.mapper.IPAddressCustomConverter">
            <a>network</a>
            <b>network</b>
        </field>
    </mapping>                    
    <mapping>
        <class-a>com.apollo.domain.model.ApolloEnvironment</class-a>
        <class-b>com.apollo.domain.dto.ApolloEnvironmentDTO</class-b>
        <field custom-converter="com.apollo.mapper.EnvironmentTypeCustomConverter">
            <a>type</a>
            <b>type</b>
        </field>
    </mapping>                    
</mappings>  